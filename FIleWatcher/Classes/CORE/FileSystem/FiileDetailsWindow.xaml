<Window x:Class="FileWatcher.Classes.CORE.FileSystem.FiileDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Details"
        MinWidth="360"
        MaxWidth="900"
        MinHeight="200"
        SizeToContent="WidthAndHeight">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Date:" Margin="0,1,12,8" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDate"
                 Grid.Row="0"
                 Grid.Column="1"
                 Margin="0,0,0,8"
                 MinWidth="240"
                 Text="{Binding Date}"
                 TextWrapping="Wrap"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="File name:" Margin="0,1,12,8" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFileName"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,0,0,8"
                 MinWidth="240"
                 Text="{Binding FileName}"
                 TextWrapping="Wrap"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Action:" Margin="0,1,12,8" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAction"
                 Grid.Row="2"
                 Grid.Column="1"
                 Margin="0,0,0,8"
                 MinWidth="240"
                 Text="{Binding Action}"
                 TextWrapping="Wrap"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Type:" Margin="0,1,12,8" VerticalAlignment="Top"/>
        <TextBox x:Name="txtType"
                 Grid.Row="3"
                 Grid.Column="1"
                 Margin="0,0,0,8"
                 MinWidth="240"
                 Text="{Binding Type}"
                 TextWrapping="Wrap"/>

        <Button x:Name="FilePathLink"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                Padding="0"
                Margin="0,8,0,0" Click="FilePathLink_Click">
            <TextBlock Text="{Binding FilePath}"
                       TextWrapping="Wrap"
                       TextTrimming="CharacterEllipsis"/>
        </Button>
    </Grid>
</Window>